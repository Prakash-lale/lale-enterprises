---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import BackToTop from '../components/BackToTop'
import ClientLogo from '../components/ClientLogo'
import ScrollReveal from '../components/ScrollReveal'
import { clients } from '../data/clients'
const base = import.meta.env.BASE_URL
const cleanBase = base.endsWith('/') && base !== '/' ? base.slice(0, -1) : (base === '/' ? '' : base)
---

<BaseLayout 
	title="Our Clients - Lale Enterprises"
	description="Trusted by leading organizations across pharmaceuticals, infrastructure, and industrial sectors"
>
	<Header />
	<BackToTop client:load />

	<!-- Hero Section -->
	<section class="relative pt-32 pb-16 gradient-bg">
		<div class="container-custom">
			<ScrollReveal client:load>
				<h1 class="text-center mb-6 text-3xl md:text-5xl lg:text-6xl">
					<span class="text-gradient">Our Clients</span>
				</h1>
			</ScrollReveal>
			<ScrollReveal client:load delay={0.2}>
				<p class="text-base md:text-lg lg:text-xl text-gray-600 text-center max-w-3xl mx-auto">
					Proud to serve industry leaders across pharmaceuticals, construction, and infrastructure
				</p>
			</ScrollReveal>
		</div>
	</section>

	<!-- Clients Grid -->
	<section class="section-padding bg-white">
		<div class="container-custom">
			<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
				{clients.map((client, index) => (
					<ClientLogo client:load client={client} index={index} />
				))}
			</div>
		</div>
	</section>

	<!-- Trust Section -->
	<section class="section-padding gradient-bg">
		<div class="container-custom">
			<div class="max-w-4xl mx-auto">
				<ScrollReveal client:load>
					<h2 class="text-center mb-8 text-gradient">Why Industry Leaders Choose Us</h2>
				</ScrollReveal>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<ScrollReveal client:load delay={0.1}>
						<div class="text-center">
							<div class="text-5xl font-bold text-primary-500 mb-2">10+</div>
							<p class="text-gray-600">Major Clients</p>
						</div>
					</ScrollReveal>
					<ScrollReveal client:load delay={0.2}>
						<div class="text-center">
							<div class="text-5xl font-bold text-primary-500 mb-2">100%</div>
							<p class="text-gray-600">Client Satisfaction</p>
						</div>
					</ScrollReveal>
					<ScrollReveal client:load delay={0.3}>
						<div class="text-center">
							<div class="text-5xl font-bold text-primary-500 mb-2">5+</div>
							<p class="text-gray-600">Industry Sectors</p>
						</div>
					</ScrollReveal>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding bg-gradient-to-br from-primary-500 to-secondary-500 text-white">
		<div class="container-custom">
			<div class="max-w-3xl mx-auto text-center">
				<ScrollReveal client:load>
					<h2 class="mb-6 text-white">Join Our Satisfied Clients</h2>
				</ScrollReveal>
				<ScrollReveal client:load delay={0.2}>
					<p class="text-xl mb-8 text-white/90">
						Experience the quality and reliability that has earned us the trust of industry leaders
					</p>
				</ScrollReveal>
				<ScrollReveal client:load delay={0.4}>
					<a href={`${cleanBase}/contact`} class="btn bg-white text-primary-500 hover:bg-gray-100">
						Start Your Partnership
					</a>
				</ScrollReveal>
			</div>
		</div>
	</section>

	<Footer />
</BaseLayout>
